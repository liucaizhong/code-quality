root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2
max_line_length = 80

[*.py]
indent_size = 4

[*.html]
max_line_length = off

[*.{yml,yaml}]
indent_size = 4

[Dockerfile]
indent_size = 4

[Makefile]
indent_size = 4

[*.{md,markdown}]
indent_size = 4
max_line_length = off

[*.json]
max_line_length = off

[COMMIT_EDITMSG]
indent_size = 4
